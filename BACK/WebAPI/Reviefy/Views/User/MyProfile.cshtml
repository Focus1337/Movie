@using Reviefy.Helpers
@{
    ViewBag.Title = "My Profile";
    Layout = "_Layout";
    
    var user = Context.Session.Get<User>("user");
}

<body>
<!-- =============== START OF WRAPPER =============== -->
<div class="wrapper">
    
    
    
    <!-- =============== START OF MAIN =============== -->
    <main class="contact-page ptb100">
        <div class="container">
            <div class="row">
                
                <!-- Start of Avatar Form -->
                <div class="col-md-4 col-sm-12">
                    <h3 class="title">Avatar</h3>
                    
                    <div style="margin-top: 10px;">
                        <div class="movie-poster">
                            <img src="@user.AvatarPath"
                                 alt="" width="200">
                        </div>
                        
                        <p></p>
                        
                        <div class="form-group text-center col-7">
                            <button asp-controller="User" asp-action="ResetAvatar" class="btn btn-main btn-effect" type="submit">Reset</button>
                        </div>
                    </div>
                </div>
                <!-- End of Avatar Form -->


                
                <div class="col-md-8">
                    <!-- Start of Information Form -->
                    <h3 class="title">Information</h3>
                    <form id="information-form" method="post">
                        
                        <!-- Form Group -->
                        <div class="form-group">
                            <label for="nickname">Nickname</label>
                            <input name="nickname" id="nickname" class="form-control input-box" type="text" 
                                   value="@user.Nickname" autocomplete="off" required/>
                        </div>

                        <!-- Form Group -->
                        <div class="form-group">
                            <label for="avatar">Avatar url</label>
                            <input name="avatar" id="avatar" class="form-control input-box" type="url" 
                                   value="@user.AvatarPath" autocomplete="off" required/>
                        </div>
                        
                        <!-- Form Group -->
                        <div>
                            <label>Registration date: @user.RegisterDate.ToString("d")</label>
                        </div>
                        
                        <!-- Form Group -->
                        <div>
                            <label>Reviews count: 21</label>
                        </div>

                        <!-- Form Group -->
                        <div class="form-group text-center">
                            <button class="btn btn-main btn-effect" type="submit">Update</button>
                        </div>
                    </form>
                    <!-- End of Information Form -->

                    
                    <h3 class="title">Security</h3>
                    <!-- Start of Security Form -->
                    <form id="security-form" method="post">
                    
                        <!-- Form Group -->
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input name="email" id="email" class="form-control input-box" type="email" 
                                   value="@user.Email" autocomplete="off" required/>
                        </div>
                        
                        <!-- Form Group -->
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input name="password" id="password" class="form-control input-box" type="password" 
                                   value="@user.Password" autocomplete="off" required/>
                        </div>

                        <!-- Form Group -->
                        <div class="form-group text-center">
                            <button class="btn btn-main btn-effect" type="submit">Update</button>
                        </div>
                    </form>
                    <!-- End of Security Form -->
                </div>
            </div>
        </div>
    </main>
    <!-- =============== END OF MAIN =============== -->
    
</div>
<!-- =============== END OF WRAPPER =============== -->


</body>